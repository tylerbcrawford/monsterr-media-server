# Core Configuration
PUID=1000
PGID=1000
TZ=UTC

# Plex Configuration
PLEX_CLAIM_TOKEN=your_plex_claim_token

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mediaserver
DB_USER=mediaserver
DB_PASSWORD=secure_password

# Security Configuration
AUTHELIA_JWT_SECRET=your_jwt_secret
REDIS_PASSWORD=secure_password
GRAFANA_ADMIN_PASSWORD=secure_password

# Storage Paths
MEDIA_PATH=/opt/media-server/media
CONFIG_PATH=/opt/media-server/config
DOWNLOADS_PATH=/opt/media-server/downloads
LOGS_PATH=/opt/media-server/logs

# Network Configuration
HOST_IP=your_host_ip
DOMAIN=your.domain.com
BASE_URL=https://your.domain.com

# DDNS Configuration (Optional)
DDNS_PROVIDER=dynu
DDNS_USERNAME=your_ddns_username
DDNS_PASSWORD=your_ddns_password
DDNS_UPDATE_INTERVAL=300

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
NOTIFICATION_EMAIL=your_email@gmail.com
